<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>dist</directory>
            <outputDirectory>uuid</outputDirectory>
            <includes>
                <include>gadget_config.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>dist</directory>
            <outputDirectory>uuid</outputDirectory>
            <includes>
                <include>target/squeezer-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/org/sbml/squeezer/resources/img</directory>
            <outputDirectory>uuid/icons/</outputDirectory>
            <includes>
                <include>SBMLsqueezerIcon_64.png</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>dist</directory>
            <outputDirectory>uuid/snapshot/</outputDirectory>
            <includes>
                <include>Screenshot_*.png</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>