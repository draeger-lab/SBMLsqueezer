<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.sbml</groupId>
  <artifactId>squeezer</artifactId>
  <packaging>jar</packaging>

  <!-- =================================================================== -->
  <!-- General project information                                         -->
  <!-- =================================================================== -->
  
  <name>${project.artifactId}</name>
  <version>2.1</version>
  <url>https://github.com/draeger-lab/SBMLsqueezer</url>
  <inceptionYear>2008</inceptionYear>
  <description>Context-sensitive creation of kinetic equations in biochemical networks</description>
  
  <properties>
    <jdk.version>1.8</jdk.version>
    <maven.build.timestamp.format>yyyy</maven.build.timestamp.format>
    <year>${maven.build.timestamp}</year><!-- This property is used for filtering the variable ${year} in some resource files -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.license.url>https://opensource.org/licenses/GPL-3.0</project.license.url>
    <junit.version>4.8</junit.version>
    <sysbio.version>1403</sysbio.version> <!-- SVN revision -->
    <quaqua.version>9</quaqua.version>
    <organization.name>University of Tuebingen, Germany</organization.name>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <squeezer.version>${project.version}</squeezer.version>
    <squeezer.basedir>${basedir}</squeezer.basedir> <!-- will be reset on each sub-pom to be the directory of the pom -->
    <squeezer.build.javac.source>1.7</squeezer.build.javac.source>
<squeezer.build.javac.target>1.7</squeezer.build.javac.target>
  </properties>
  
 	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/draeger-lab/SBMLsqueezer/issues</url>
	</issueManagement>
  
  <developers>
    <developer>
      <email>draeger@informatik.uni-tuebingen.de</email>
      <name>Andreas Dr√§ger</name>
      <url>https://github.com/draeger/</url>
      <id>draeger</id>
    </developer>
</developers>

  <build>
 <sourceDirectory>src/main</sourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <resources>
      <resource>
		    <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
	      <directory>test</directory>
      </testResource>
</testResources>

  <plugins>
        <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>${squeezer.build.javac.source}</source>
          <target>${squeezer.build.javac.target}</target>
        </configuration>
</plugin>
<plugin>
        <!-- NOTE: We don't need a groupId specification because the group is
             org.apache.maven.plugins ...which is assumed by default.
         -->
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.1</version>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifest>
              <mainClass>org.sbml.squeezer.SBMLsqueezer</mainClass>
            </manifest>
          </archive>
        </configuration>
        </plugin>
<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/main/assembly/garuda_zip.xml</descriptor>
                            </descriptors>
					          <target>${squeezer.build.javac.target}</target>
                        </configuration>
                    </execution>
                </executions>
</plugin>
</plugins>

</build> 

